{
    "compilerOptions": {
        "outDir": "lib",
        "module": "commonjs",
        "target": "ES2020",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
